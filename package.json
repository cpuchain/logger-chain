{
    "name": "logger-chain",
    "version": "1.0.3",
    "description": "Zero deps simple node.js logger with colored outputs",
    "license": "MIT",
    "author": "CPUchain",
    "type": "module",
    "main": "./lib/index.cjs",
    "module": "./lib/index.js",
    "types": "./lib/index.d.ts",
    "exports": {
        ".": {
            "import": "./lib/index.js",
            "require": "./lib/index.cjs",
            "default": "./lib/index.js"
        }
    },
    "keywords": [
        "cpuchain",
        "logger",
        "typescript",
        "esm",
        "commonjs"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/cpuchain/logger-chain.git"
    },
    "scripts": {
        "lint": "eslint src/**/*.ts test/**/*.ts",
        "build": "tsc -p tsconfig.types.json --noEmit && rollup -c",
        "start": "tsx src/example.ts",
        "docs:dev": "vitepress dev docs",
        "docs:build": "vitepress build docs",
        "docs:preview": "vitepress preview docs",
        "test": "node ./lib/example.js"
    },
    "devDependencies": {
        "@cpuchain/eslint": "^1.0.9",
        "@cpuchain/rollup": "^1.0.4",
        "@types/node": "^22.16.0",
        "@vitest/coverage-v8": "^3.2.4",
        "cross-env": "^7.0.3",
        "dotenv": "^17.2.0",
        "glob": "^11.0.3",
        "istanbul-badges-readme": "^1.9.0",
        "ts-node": "^10.9.2",
        "tsc": "^2.0.4",
        "tsx": "^4.20.3",
        "typescript": "^5.8.3",
        "vitepress": "^1.6.3",
        "vitest": "^3.2.4",
        "yoctocolors": "^2.1.1"
    },
    "resolutions": {
        "fast-glob": ">=3.3.3"
    }
}
